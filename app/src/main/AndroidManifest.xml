        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TappingActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SpiralActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BallActivity"
            android:label="@string/title_activity_ball"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".ReactionActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ReactionGraphDemoActivity"
            android:screenOrientation="portrait"/>
