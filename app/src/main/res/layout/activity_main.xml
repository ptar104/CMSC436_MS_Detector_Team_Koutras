<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FF88AAE0"
    tools:context="com.capstone.petros.cmsc436msdetector.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:text="MS Detector"
        android:textSize="36sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        android:layout_weight=".1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:paddingBottom="10dp"
        >

        <Button
            android:text="Tap Test"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:id="@+id/TapButton"
            android:onClick="startTapTest"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"/>


        <Button
            android:text="Spiral Test"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:id="@+id/SpiralButton"
            android:onClick="startSpiralTest"
            android:textSize="20sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:paddingBottom="10dp"
        >

        <Button
            android:text="Ball Test"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:id="@+id/BallButton"
            android:onClick="startBallTest"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"/>

        <Button
            android:text="Reaction Test"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:id="@+id/ReactionButton"
            android:onClick="startReactionTest"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:paddingBottom="10dp">

        <Button
            android:text="Graph Demo"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_alignParentLeft="true"
            android:id="@+id/ReactionGraphButton"
            android:onClick="startReactionGraphDemo"
            android:textSize="20sp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"/>

        <Button
            android:text="Flex Demo"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:id="@+id/FlexButton"
            android:onClick="startFlexDemo"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:paddingBottom="10dp">

        <Button
            android:text="Sway Test"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            android:id="@+id/SwayButton"
            android:onClick="startSwayTest"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"/>

        <Button
            android:text="Step Test"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:id="@+id/StepButton"
            android:onClick="startStepTest"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:paddingBottom="10dp">

        <Button
            android:text="Walking Test"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            android:id="@+id/WalkingButton"
            android:onClick="startWalkingTest"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"/>

        <Button
            android:text="Symbol Test"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:id="@+id/SymbolButton"
            android:onClick="startSymbolTest"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/VibrationButton"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:onClick="startVibrationTest"
            android:textSize="20sp"
            android:text="Vibration Test" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"/>

        <Space
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:onClick="startVibrationTest"
            android:text="Vibration Test" />

    </LinearLayout>


</LinearLayout>
