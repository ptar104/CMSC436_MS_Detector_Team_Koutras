<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.capstone.petros.cmsc436msdetector.WalkingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="draw line test"
        android:onClick="drawPoints"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save image"
            android:onClick="saveMap"/>


    </LinearLayout>

    <TextView
        android:id="@+id/walking_lat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Getting lat..."
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/walking_long"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Getting long..."
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/walking_vel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculating vel..."
        android:textSize="30sp"/>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />

</LinearLayout>


